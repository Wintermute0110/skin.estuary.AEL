		<!-- Left panel ======================================================================== -->
		<control type="group">
			<include>OpenClose_Left</include>
			<include>Visible_Left</include>
			<visible>Control.IsVisible(954)</visible>

			<!-- Code taken from <include name="ListThumbInfoPanel"> @View_50_List.xml -->
			<depth>DepthContentPanel</depth>
			<include content="ContentPanel">
				<param name="width" value="654" />
			</include>

			<control type="group">
				<left>273</left>
				<top>590</top>
				<include>UserRatingCircle</include>
			</control>

			<!-- Clearlogo -->
			<control type="image">
				<left>90</left>
				<top>110</top>
				<width>420</width>
				<height>150</height>
				<!-- <texture background="true">special://skin/extras/backgrounds/pattern4.jpg</texture>  -->
				<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
				<aspectratio>keep</aspectratio>
			</control>

			<!-- Metadata -->
			<control type="group">
				<left>0</left>
				<top>280</top>
				<include content="AEL_Matrix_Text">
					<param name="left" value="0" />
					<param name="top" value="0" />
					<param name="text_label" value="Genre" />
					<param name="text" value="$INFO[ListItem.Genre]" />
				</include>
				<include content="AEL_Matrix_Text">
					<param name="left" value="0" />
					<param name="top" value="30" />
					<param name="text_label" value="Studio" />
					<param name="text" value="$INFO[ListItem.Studio]" />
				</include>
				<include content="AEL_Matrix_Text">
