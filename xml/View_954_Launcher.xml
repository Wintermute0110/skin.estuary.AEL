<!--
	NOTE Left panel for WideList view is in MyPrograms.xml, not in View_55_WideList.xml

	Template used: View_55_WideList.xml, skin.confluence.AEL
	Wintermute0110 <wintermute0110@gmail.com>
-->
<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="View_954_Launcher">
		<!-- Right wide list =================================================================== -->
		<control type="group">
			<include>OpenClose_Right</include>
			<visible>Control.IsVisible(954)</visible>
			<include>Visible_Right</include>

			<control type="fixedlist" id="954">
				<left>594</left>
				<top>list_y_offset</top>
				<bottom>list_y_offset</bottom>
				<right>0</right>
				<scrolltime tween="cubic" easing="out">500</scrolltime>
				<orientation>vertical</orientation>
				<pagecontrol>531</pagecontrol>
				<movement>5</movement>
				<focusposition>6</focusposition>
				<onleft>9000</onleft>
				<onright>531</onright>
				<onup>954</onup>
				<ondown>954</ondown>
				<viewtype label="Launcher">list</viewtype>
				<visible>Window.IsActive(MyPrograms.xml)</visible>

				<focusedlayout height="80" width="widelist_width">
					<control type="image">
						<left>0</left>
						<right>0</right>
						<height>80</height>
						<texture colordiffuse="button_focus">lists/focus.png</texture>
						<visible>Control.hasFocus(954)</visible>
					</control>
					<control type="image">
						<left>20</left>
						<top>25</top>
						<width>32</width>
						<height>32</height>
						<texture>$VAR[ListWatchedIconVar]</texture>
					</control>
					<control type="label">
						<left>75</left>
						<height>80</height>
						<right>100</right>
						<aligny>center</aligny>
						<scroll>true</scroll>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<left>40</left>
						<height>80</height>
						<right>40</right>
						<align>right</align>
						<aligny>center</aligny>
						<font>font27</font>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</focusedlayout>

				<itemlayout height="80" width="widelist_width">
					<control type="image">
						<left>20</left>
						<top>25</top>
						<width>32</width>
						<height>32</height>
						<texture>$VAR[ListWatchedIconVar]</texture>
					</control>
					<control type="label">
						<left>75</left>
						<height>80</height>
						<right>100</right>
						<aligny>center</aligny>
						<scroll>true</scroll>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<left>40</left>
						<height>80</height>
						<right>40</right>
						<align>right</align>
						<aligny>center</aligny>
						<font>font27</font>
						<label>$INFO[ListItem.Label2]</label>
						<textcolor>grey</textcolor>
						<shadowcolor>text_shadow</shadowcolor>
					</control>
				</itemlayout>
			</control>
		</control>

		<!-- Left panel ======================================================================== -->
		<control type="group">
			<include>OpenClose_Left</include>
			<include>Visible_Left</include>
			<visible>Control.IsVisible(954)</visible>

			<!-- Code taken from <include name="ListThumbInfoPanel"> @View_50_List.xml -->
			<depth>DepthContentPanel</depth>
			<include content="ContentPanel">
				<param name="width" value="654" />
			</include>

			<control type="group">
				<left>273</left>
				<top>590</top>
				<include>UserRatingCircle</include>
			</control>

			<!-- Clearlogo -->
			<control type="image">
				<left>90</left>
				<top>110</top>
				<width>420</width>
				<height>150</height>
				<!-- <texture background="true">special://skin/extras/backgrounds/pattern4.jpg</texture>  -->
				<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
				<aspectratio>keep</aspectratio>
			</control>

			<!-- Metadata -->
			<control type="group">
				<left>0</left>
				<top>280</top>
				<include content="AEL_Matrix_Text">
					<param name="left" value="0" />
					<param name="top" value="0" />
					<param name="text_label" value="Genre" />
					<param name="text" value="$INFO[ListItem.Genre]" />
				</include>
				<include content="AEL_Matrix_Text">
					<param name="left" value="0" />
					<param name="top" value="30" />
					<param name="text_label" value="Studio" />
					<param name="text" value="$INFO[ListItem.Studio]" />
				</include>
				<include content="AEL_Matrix_Text">
					<param name="left" value="0" />
					<param name="top" value="60" />
					<param name="text_label" value="Rating" />
					<param name="text" value="$INFO[ListItem.Rating]" />
				</include>
				<control type="textbox">
					<left>30</left>
					<width>520</width>
					<top>100</top>
					<height>220</height>
					<font>font10</font>
					<label>$INFO[ListItem.Plot]</label>
					<autoscroll time="3000" delay="7000" repeat="5000">!System.HasModalDialog + Skin.HasSetting(AutoScroll)</autoscroll>
				</control>
			</control>

			<!-- Icon -->
			<control type="image">
				<left>90</left>
				<top>630</top>
				<width>420</width>
				<height>420</height>
				<!-- <texture background="true">special://skin/extras/backgrounds/pattern4.jpg</texture> -->
				<texture background="true">$INFO[ListItem.Icon]</texture>
				<aspectratio aligny="bottom">keep</aspectratio>
			</control>
		</control>
	</include>
</includes>
