<!--
	List view to view ROMs.

	Template used: View_502_FanArt.xml, View_50_List.xml, skin.confluence.AEL
	Wintermute0110 <wintermute0110@gmail.com>
-->
<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="View_954_ROM_Shots">
		<control type="group">
			<include>OpenClose_Left</include>
			<visible>Control.IsVisible(954)</visible>
			<include>Visible_Left</include>

			<!-- id of the list is the id of the view -->
			<control type="fixedlist" id="954">
				<left>-5</left>
				<right>1195</right>
				<top>list_y_offset</top>
				<bottom>list_y_offset</bottom>
				<movement>5</movement>
				<focusposition>6</focusposition>
				<scrolltime tween="cubic" easing="out">500</scrolltime>
				<orientation>vertical</orientation>
				<pagecontrol>954600</pagecontrol>
				<onleft>9000</onleft>
				<onright>954600</onright>
				<onup>954</onup>
				<ondown>954</ondown>
				<!-- viewtype label attribute defines the view name on Kodi view selector -->
				<viewtype label="ROM Shots">list</viewtype>
				<visible>Window.IsActive(MyPrograms.xml)</visible>

				<focusedlayout height="list_item_height">
					<control type="image">
						<left>0</left>
						<right>0</right>
						<top>0</top>
						<bottom>0</bottom>
						<texture colordiffuse="button_focus">lists/focus.png</texture>
						<visible>Control.HasFocus(954)</visible>
					</control>
					<!-- Render year. If year is empty then render overlay icon -->
					<control type="label">
						<left>18</left>
						<top>0</top>
						<bottom>0</bottom>
						<width>80</width>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Year]</label>
						<!-- <textcolor>button_focus</textcolor> -->
						<shadowcolor>text_shadow</shadowcolor>
						<visible>!String.IsEmpty(ListItem.Year)</visible>
					</control>
					<control type="image">
						<left>35</left>
						<centertop>50%</centertop>
						<width>32</width>
						<height>32</height>
						<texture>$VAR[ListWatchedIconVar]</texture>
						<animation effect="fade" start="30" end="100" time="300" reversible="false">Focus</animation>
						<visible>String.IsEmpty(ListItem.Year)</visible>
					</control>
					<!--
					<control type="image">
						<left>35</left>
						<centertop>50%</centertop>
						<width>32</width>
						<height>32</height>
						<texture colordiffuse="button_focus">$VAR[ListWatchedIconVar]</texture>
						<animation effect="fade" start="0" end="100" time="300" reversible="false">Focus</animation>
						<animation effect="fade" time="150">VisibleChange</animation>
						<visible>!Control.HasFocus(954)</visible>
						<visible>String.IsEmpty(ListItem.Year)</visible>
					</control>
					-->

					<!-- Main label -->
					<control type="label">
						<left>105</left>
						<right>15</right>
						<top>0</top>
						<bottom>0</bottom>
						<aligny>center</aligny>
						<scroll>true</scroll>
						<font>font27</font>
						<label>$INFO[ListItem.Label]</label>
						<shadowcolor>text_shadow</shadowcolor>
					</control>
					<control type="label">
						<top>0</top>
						<bottom>0</bottom>
						<left>100</left>
						<right>20</right>
						<align>right</align>
						<aligny>center</aligny>
						<font>font12</font>
						<label>$VAR[ListLabel2Var]</label>
						<animation effect="fade" start="70" end="100" time="300" reversible="false">Focus</animation>
						<shadowcolor>text_shadow</shadowcolor>
					</control>

					<!-- Trailer Trigger -->
					<!-- Causes problems in Leia. Make strange transitions when changing rows
					     on the listitem. Commented until I find a solution. -->
					<!--
					<control type="button">
						<left>0</left>
						<top>0</top>
						<width>1</width>
						<height>1</height>
						<onload condition="!IsEmpty(ListItem.Trailer)">PlayerControl(Repeat)</onload>
						<onfocus condition="!IsEmpty(ListItem.Trailer)">PlayMedia($ESCINFO[ListItem.trailer],1)</onfocus>
						<onunfocus condition="Player.HasVideo">PlayerControl(Stop)</onunfocus>
						<texturefocus>-</texturefocus>
						<texturenofocus>-</texturenofocus>
						<animation type="Focus">
							<effect type="fade" delay="250" start="0" end="100" />
						</animation>
					</control>
					-->
				</focusedlayout>

				<itemlayout height="list_item_height">
					<!-- Render year. If year is empty then render overlay icon -->
					<control type="label">
						<left>18</left>
						<top>0</top>
						<bottom>0</bottom>
						<width>80</width>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Year]</label>
						<!-- <textcolor>button_focus</textcolor> -->
						<shadowcolor>text_shadow</shadowcolor>
						<visible>!String.IsEmpty(ListItem.Year)</visible>
					</control>
					<control type="image">
						<left>35</left>
						<centertop>50%</centertop>
						<width>32</width>
						<height>32</height>
						<texture>$VAR[ListWatchedIconVar]</texture>
						<animation effect="fade" start="30" end="100" time="300" reversible="false">Focus</animation>
						<visible>String.IsEmpty(ListItem.Year)</visible>
					</control>
					<!--
					<control type="image">
						<left>35</left>
						<centertop>50%</centertop>
						<width>32</width>
						<height>32</height>
						<texture colordiffuse="button_focus">$VAR[ListWatchedIconVar]</texture>
						<animation effect="fade" start="0" end="100" time="300" reversible="false">Focus</animation>
						<animation effect="fade" time="150">VisibleChange</animation>
						<visible>!Control.HasFocus(954)</visible>
						<visible>String.IsEmpty(ListItem.Year)</visible>
					</control>
					-->

					<!-- Main label -->
					<control type="label">
						<left>105</left>
						<right>15</right>
						<top>0</top>
						<bottom>0</bottom>
						<aligny>center</aligny>
						<font>font27</font>
						<label>$INFO[ListItem.Label]</label>
						<shadowcolor>text_shadow</shadowcolor>
					</control>
					<control type="label">
						<left>20</left>
						<right>20</right>
						<top>0</top>
						<bottom>0</bottom>
						<align>right</align>
						<aligny>center</aligny>
						<font>font12</font>
						<label>$VAR[ListLabel2Var]</label>
						<textcolor>grey</textcolor>
						<shadowcolor>text_shadow</shadowcolor>
					</control>
				</itemlayout>
			</control>
		</control>

		<control type="group">
			<depth>DepthContentPanel</depth>
			<include>OpenClose_Right</include>
			<visible>Control.IsVisible(954)</visible>
			<include>Visible_Right</include>
			<control type="group">
				<right>-20</right>
				<width>1235</width>
				<include content="ContentPanel">
					<param name="width" value="1235" />
					<param name="left" value="0" />
					<param name="top" value="-20" />
					<param name="flipx" value="true" />
				</include>

				<!-- This is the scrollbar of the list -->
				<control type="scrollbar" id="954600">
					<left>20</left>
					<top>list_y_offset</top>
					<width>12</width>
					<bottom>list_y_offset</bottom>
					<onleft>954</onleft>
					<onright>954</onright>
					<orientation>vertical</orientation>
					<animation effect="zoom" end="50,100" time="300" tween="sine" center="20,0" easing="inout" condition="!Control.HasFocus(954600)">conditional</animation>
				</control>

				<!--
				<control type="group">
					<left>310</left>
					<top>936</top>
					<include content="RatingCircle">
						<param name="animation" value="True" />
					</include>
				</control>
				-->
				<control type="group">
					<left>310</left>
					<top>936</top>
					<include content="RatingCircle">
						<param name="animation" value="True" />
					</include>
				</control>

				<!-- First row of images ======================================================= -->
				<!--
					Console: Snap
					MAME: Snap
					If available play trailer instead of Snap.
					For now disable trailer rendering until the stuttering problem is solved.
				-->
				<include content="AEL_Artwork">
					<param name="debug_control" value="false" />
					<param name="left" value="50" />
					<param name="top" value="90" />
					<param name="width" value="800" />
					<param name="height" value="520" />
					<param name="asset_label" value="SNAP" />
					<param name="asset_image" value="$INFO[ListItem.Art(snap)]" />
				</include>
				<!--
				<control type="image">
					<!-- In Leia next line must be commented, otherwise snap is never displayed --
					<!-- <visible>IsEmpty(ListItem.Trailer)</visible> --
					<left>40</left>
					<top>90</top>
					<width>800</width>
					<height>520</height>
					<texture background="true">$INFO[ListItem.Art(snap)]</texture>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="videowindow">
					<visible>Player.Playing + !IsEmpty(ListItem.Trailer)</visible>
					<left>40</left>
					<top>90</top>
					<width>800</width>
					<height>520</height>
				</control>
				-->

				<!--
					Console: Title, if not present Boxback/CPanel
					MAME: Title, if not present Boxback/CPanel
					AR 4/3 = 1.333
				-->
				<include content="AEL_Artwork">
					<param name="debug_control" value="false" />
					<param name="left" value="880" />
					<param name="top" value="90" />
					<param name="width" value="300" />
					<param name="height" value="225" />
					<param name="asset_label" value="SIMPLE TITLE" />
					<param name="asset_image" value="$VAR[ROM_Simple_Art_Title]" />
				</include>

				<include content="AEL_Artwork">
					<param name="debug_control" value="false" />
					<param name="left" value="880" />
					<param name="top" value="360" />
					<param name="width" value="300" />
					<param name="height" value="400" />
					<param name="asset_label" value="SIMPLE MAIN" />
					<param name="asset_image" value="$VAR[ROM_Simple_Art_Main]" />
				</include>

				<!-- Platform AEL icon -->
				<include content="AEL_Platform_Icon">
					<param name="debug_control" value="false" />
					<param name="left" value="50" />
					<param name="top" value="620" />
					<param name="box_width" value="140" />
					<param name="box_height" value="140" />
				</include>

				<!--
					Console: Cartridge
					MAME: PCB
				-->
				<include content="AEL_Artwork">
					<param name="debug_control" value="false" />
					<param name="left" value="215" />
					<param name="top" value="620" />
					<param name="width" value="250" />
					<param name="height" value="140" />
					<param name="asset_label" value="CARTRIDGE" />
					<param name="asset_image" value="$INFO[ListItem.Art(cartridge)]" />
				</include>

				<!--
					Console: Clearlogo, if not present Banner/Marquee
					MAME: Clearlogo, if not present Banner/Marquee
				-->
				<include content="AEL_Artwork">
					<param name="debug_control" value="false" />
					<param name="left" value="490" />
					<param name="top" value="620" />
					<param name="width" value="360" />
					<param name="height" value="140" />
					<param name="asset_label" value="SIMPLE LOGO" />
					<param name="asset_image" value="$VAR[ROM_Simple_Art_Logo]" />
				</include>

				<!-- Metadata ================================================================== -->
				<control type="group">
					<left>50</left>
					<top>780</top>

					<!-- Infolabels -->
					<!-- Genre, Developer, NPlayers, ESRB, Rating, Platform -->
					<include content="AEL_Metadata_Text">
						<param name="debug_control" value="false" />
						<param name="left" value="0" />
						<param name="top" value="0" />
						<param name="label_text" value="Genre" />
						<param name="text" value="$INFO[ListItem.Genre]" />
					</include>
					<include content="AEL_Metadata_Text">
						<param name="debug_control" value="false" />
						<param name="left" value="0" />
						<param name="top" value="30" />
						<param name="label_text" value="Developer" />
						<param name="text" value="$INFO[ListItem.Studio]" />
					</include>
					<include content="AEL_Metadata_Text">
						<param name="debug_control" value="false" />
						<param name="left" value="0" />
						<param name="top" value="60" />
						<param name="label_text" value="NPlayers" />
						<param name="text" value="$INFO[ListItem.Property(nplayers)]" />
					</include>
					<include content="AEL_Metadata_Text">
						<param name="debug_control" value="false" />
						<param name="left" value="0" />
						<param name="top" value="90" />
						<param name="label_text" value="ESRB" />
						<param name="text" value="$INFO[ListItem.Property(esrb)]" />
					</include>
					<include content="AEL_Metadata_Text">
						<param name="debug_control" value="false" />
						<param name="left" value="0" />
						<param name="top" value="120" />
						<param name="label_text" value="Rating" />
						<param name="text" value="$INFO[ListItem.Rating]" />
					</include>
					<include content="AEL_Metadata_Text">
						<param name="debug_control" value="false" />
						<param name="left" value="0" />
						<param name="top" value="150" />
						<param name="label_text" value="Platform" />
						<param name="text" value="$INFO[ListItem.Property(platform)]" />
					</include>

					<!-- Plot -->
					<include content="AEL_Plot_Text">
						<param name="debug_control" value="false" />
						<param name="left" value="580" />
						<param name="top" value="0" />
						<param name="width" value="560" />
						<param name="height" value="250" />
						<param name="text" value="$INFO[ListItem.Plot]" />
					</include>
				</control>
			</control>
		</control>
	</include>
</includes>
