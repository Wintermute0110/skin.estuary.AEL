<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="View_952_Launcher_WideList">
		<control type="group">
			<include>OpenClose_Right</include>
			<visible>Control.IsVisible(952)</visible>
			<include>Visible_Right</include>

			<control type="fixedlist" id="952">
				<left>594</left>
				<top>list_y_offset</top>
				<bottom>list_y_offset</bottom>
				<right>0</right>
				<scrolltime tween="cubic" easing="out">500</scrolltime>
				<orientation>vertical</orientation>
				<pagecontrol>531</pagecontrol>
				<movement>5</movement>
				<focusposition>6</focusposition>
				<onleft>9000</onleft>
				<onright>531</onright>
				<onup>952</onup>
				<ondown>952</ondown>
				<viewtype label="Launcher WideList">list</viewtype>
				<visible>Window.IsActive(MyPrograms.xml)</visible>

				<focusedlayout height="80" width="widelist_width">
					<control type="image">
						<left>0</left>
						<right>0</right>
						<height>80</height>
						<texture colordiffuse="button_focus">lists/focus.png</texture>
						<visible>Control.hasFocus(952)</visible>
					</control>
					<control type="image">
						<left>20</left>
						<top>25</top>
						<width>32</width>
						<height>32</height>
						<texture>$VAR[AddonsListIconVar]</texture>
					</control>
					<control type="label">
						<left>75</left>
						<height>80</height>
						<right>100</right>
						<aligny>center</aligny>
						<scroll>true</scroll>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<left>40</left>
						<height>80</height>
						<right>40</right>
						<align>right</align>
						<aligny>center</aligny>
						<font>font27</font>
						<label>$VAR[AddonsLabel2Var]</label>
					</control>
				</focusedlayout>

				<itemlayout height="80" width="widelist_width">
					<control type="image">
						<left>20</left>
						<top>25</top>
						<width>32</width>
						<height>32</height>
						<texture>$VAR[AddonsListIconVar]</texture>
					</control>
					<control type="label">
						<left>75</left>
						<height>80</height>
						<right>100</right>
						<aligny>center</aligny>
						<scroll>true</scroll>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<left>40</left>
						<height>80</height>
						<right>40</right>
						<align>right</align>
						<aligny>center</aligny>
						<font>font27</font>
						<label>$VAR[AddonsLabel2Var]</label>
						<textcolor>grey</textcolor>
						<shadowcolor>text_shadow</shadowcolor>
					</control>
				</itemlayout>
			</control>
		</control>

		<!-- Right box ------------------------------------------------------------------------- -->
		<control type="group">
			<left>0</left>
			<top>0</top>
			<visible>Control.IsVisible(952)</visible>

			<!-- Clearlogo -->
			<control type="image">
				<left>60</left>
				<top>110</top>
				<width>480</width>
				<height>150</height>
				<!-- <texture background="true">special://skin/extras/backgrounds/pattern4.jpg</texture> -->
				<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
				<aspectratio>keep</aspectratio>
			</control>

			<!-- Metadata -->
			<control type="group">
				<left>0</left>
				<top>280</top>
				<include content="AEL_Matrix_Text">
					<param name="left" value="0" />
					<param name="top" value="0" />
					<param name="text_label" value="Genre" />
					<param name="text" value="$INFO[ListItem.Genre]" />
				</include>
				<include content="AEL_Matrix_Text">
					<param name="left" value="0" />
					<param name="top" value="30" />
					<param name="text_label" value="Studio" />
					<param name="text" value="$INFO[ListItem.Studio]" />
				</include>
				<include content="AEL_Matrix_Text">
					<param name="left" value="0" />
					<param name="top" value="60" />
					<param name="text_label" value="Rating" />
					<param name="text" value="$INFO[ListItem.Rating]" />
				</include>
				<control type="textbox">
					<left>30</left>
					<width>520</width>
					<top>90</top>
					<height>220</height>
					<font>font10</font>
					<label>$INFO[ListItem.Plot]</label>
					<autoscroll time="3000" delay="7000" repeat="5000">!System.HasModalDialog + Skin.HasSetting(AutoScroll)</autoscroll>
				</control>
			</control>

			<!-- Icon -->
			<control type="image">
				<left>75</left>
				<top>600</top>
				<width>450</width>
				<height>450</height>
				<!-- <texture background="true">special://skin/extras/backgrounds/pattern4.jpg</texture> -->
				<texture background="true">$INFO[ListItem.Icon]</texture>
				<aspectratio aligny="bottom">keep</aspectratio>
			</control>
		</control>
	</include>
</includes>
