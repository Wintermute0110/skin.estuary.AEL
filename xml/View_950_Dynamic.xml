<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="View_950_Dynamic">
		<!-- Right wide list =================================================================== -->
		<control type="group">
			<include>OpenClose_FadeSlide_Right</include>
			<visible>Control.IsVisible(950)</visible>
			<include>Visible_Right</include>

			<control type="fixedlist" id="950">
				<left>950</left>
				<top>list_y_offset</top>
				<bottom>list_y_offset</bottom>
				<right>0</right>
				<scrolltime tween="cubic" easing="out">500</scrolltime>
				<orientation>vertical</orientation>
				<pagecontrol>531</pagecontrol>
				<movement>5</movement>
				<focusposition>6</focusposition>
				<onleft>9000</onleft>
				<onright>531</onright>
				<onup>950</onup>
				<ondown>950</ondown>
				<viewtype label="Dynamic">list</viewtype>
				<visible>Window.IsActive(MyPrograms.xml)</visible>

				<focusedlayout height="80" width="1060">
					<control type="image">
						<left>0</left>
						<right>0</right>
						<bottom>0</bottom>
						<texture colordiffuse="button_focus">lists/focus.png</texture>
						<visible>Control.hasFocus(950)</visible>
					</control>
					<!-- Render year. If year is empty then render overlay icon -->
					<control type="label">
						<left>18</left>
						<top>0</top>
						<bottom>0</bottom>
						<width>80</width>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Year]</label>
						<shadowcolor>text_shadow</shadowcolor>
					</control>
					<control type="image">
						<left>35</left>
						<centertop>50%</centertop>
						<width>32</width>
						<height>32</height>
						<texture>$VAR[ListWatchedIconVar]</texture>
						<visible>String.IsEmpty(ListItem.Year)</visible>
					</control>
					<!-- Main label -->
					<control type="label">
						<left>105</left>
						<top>0</top>
						<bottom>0</bottom>
						<right>100</right>
						<aligny>center</aligny>
						<scroll>true</scroll>
						<label>$INFO[ListItem.Label]</label>
						<shadowcolor>text_shadow</shadowcolor>
					</control>
					<control type="label">
						<left>40</left>
						<top>0</top>
						<bottom>0</bottom>
						<right>40</right>
						<align>right</align>
						<aligny>center</aligny>
						<label>$VAR[ListLabel2Var]</label>
